@using System.Globalization
@model BillingSystem.EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Delete Product";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow mt-4">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-warning mb-4">Are you sure you want to delete this product?</h3>

                    <!-- Product Name -->
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.ProductName)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ProductName)</p>
                    </div>

                    <!-- Product Price -->
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.ProductPrice)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ProductPrice)</p>
                    </div>

                    <!-- Product Description -->
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.ProductDescription)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ProductDescription)</p>
                    </div>
                </div>

                <!-- Card Footer -->
                <div class="card-footer text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                        <button type="submit" class="btn btn-danger ml-2">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>