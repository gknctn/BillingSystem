@model BillingSystem.EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body mt-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="ProductName" class="col-sm-3 col-form-label font-weight-bold">Product Name</label>
                            <div class="col-sm-9">
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-1">
                            <label asp-for="ProductDescription" class="col-sm-3 col-form-label font-weight-bold">Description</label>
                            <div class="col-sm-9">
                                <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-1">
                            <label asp-for="ProductPrice" class="col-sm-3 col-form-label font-weight-bold">Price</label>
                            <div class="col-sm-9">
                                <input asp-for="ProductPrice" class="form-control" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-3">
                            <div class="col-sm-12 text-center">
                                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
