@model BillingSystem.EntityLayer.Concrete.Order

@{
    ViewData["Title"] = "CreateOrder";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    if (ViewData["tableId"] == null)
    {
        ViewData["tableId"] = "defaultTableId"; // Set your default value here
    }
}

<h1 class="display-4">Create Order</h1>

<h4 class="text-muted">Order - Table @ViewBag.TableId</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateOrder" class="needs-validation" novalidate>
            <div class="form-group">
                <input type="hidden" asp-for="TableId" value="@ViewBag.TableId" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-area="Admin" asp-controller="AdminTable" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
