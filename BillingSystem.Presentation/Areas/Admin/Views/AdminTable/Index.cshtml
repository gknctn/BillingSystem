@model IEnumerable<BillingSystem.EntityLayer.Concrete.Table>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h1 class="text-center">Tables</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">@item.TableName</h2>
                        <h5 class="card-title text-center mb-4">
                            @if (item.IsOccupied.Equals(false))
                            {
                                <span class="badge text-bg-success p-3">Boş</span>
                            }
                            else
                            {
                                <span class="badge text-bg-danger p-3">Dolu</span>
                            }
                        </h5>
                        <div class="text-center fs-5">

                            <a asp-area="Admin" asp-controller="AdminOrder" asp-action="ListOrder" asp-route-id="@item.TableId" class="btn btn-primary w-100">
                                Ürünleri gör
                            </a>

                            <a asp-area="Admin" asp-controller="AdminOrder" asp-action="CreateOrder" asp-route-id="@item.TableId" class="btn btn-primary mt-3 w-100">
                                Masayı aç
                            </a>

                            <a asp-area="Admin" asp-controller="AdminOrderItem" asp-action="CreateOrderItem" asp-route-id="@item.TableId" class="btn btn-primary w-100 mt-3">
                                Masaya ürün ekle
                            </a>

                            <a asp-area="Admin" asp-controller="AdminPayment" asp-action="PayOrder" asp-route-id="@item.TableId" class="btn btn-danger mt-3 w-100">
                                Ödeme Yap
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

