@using BillingSystem.Presentation.Models.Dtos
@model CategoryWithProducts

@{
    ViewData["Title"] = "Index";
}



<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-id="0" asp-fragment="CategoryMenu">Tümü</a>
                </li>

                @foreach (Category category in Model.Categories)
                {
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index" asp-route-id="@category.CategoryId" asp-fragment="CategoryMenu">
                            @category.CategoryName
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>


<div class="mt-3" id="MenuDiv">
    <div class="container ">
        <div class="menu-grid   row">
            @if (Model.Products.Count() == 0)
            {
                <h3>Kayıtlı ürün bulunmamaktadır.</h3>
            }
            <div class="row">
                @foreach (Product product in Model.Products)
                {
                    <div class="col-3 mb-4">
                        <!-- mb-4 ile kartlar arasında alt boşluk ekledik -->
                        <div class="card h-100">
                            <!-- h-100 ile kartların yüksekliklerini eşitledik -->
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">@product.ProductDescription</p>
                                <p class="card-text">@product.ProductPrice</p>
                                <a href="#" class="card-link">Card link</a>
                                <a href="#" class="card-link">Another link</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
